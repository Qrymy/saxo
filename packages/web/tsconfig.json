{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@saxo/shared/*": ["../shared/src/*"],
      "@saxo/types/*": ["../types/src/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../shared"
    },{
      "path": "../types"
    }
  ]
}
