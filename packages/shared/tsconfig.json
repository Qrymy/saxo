{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2018",
    "paths": {
      "@saxo/shared/*": ["src/*"],
      "@saxo/types/*": ["../types/dist/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../types"
    }
  ]
}